#! /usr/bin/env python
# encoding: utf-8

def build(bld):
	bld(rule="${CODEGEN} -o ${TGT} -i ${SRC}", source="ActivityMultiplexerAsyncOptions.hpp", target="BoostXMLSerializable.cpp")

	bld.shlib(includes=["#/monitoring"], use="BOOST siox-core-ContainerSerializer siox-core-AutoConfigurator ", target='siox-monitoring-ActivityMultiplexerAsync', source='ActivityMultiplexerAsync.cpp BoostXMLSerializable.cpp')

	bld.recurse(['plugins'], mandatory=True)


