#! /usr/bin/env python
# encoding: utf-8


def build(bld):
	bld(rule="${CODEGEN} -o ${TGT} -i ${SRC}", source="FileBasedSystemInformationOptions.hpp", target="BoostXMLSerializable.cpp", name="FileBasedSystemInformationOptions")

	bld.shlib(includes="", use="BOOST ", target = "siox-monitoring-FileBasedSystemInformation", source = "FileBasedSystemInformation.cpp BoostXMLSerializable.cpp", depends_on="FileBasedSystemInformationOptions" )
	
	bld.recurse(['test'], mandatory=True)
	bld.install_files('${PREFIX}/include/' + bld.path.relpath(), 'FileBasedSystemInformationOptions.hpp') 

