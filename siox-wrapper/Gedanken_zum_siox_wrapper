class FunctionParser():
	def __init__(self, options):
	def parse(self, string):
		Erstellt eine Instanz der Klasse Function()
		Erstellt unter bestimmten Bedingungen Instanzen der Klasse 
			Parameter()
	def parseFile(self):
	def parseString(self, string):

class CommandParser():
	def __init__(self, options):
	def parse(self):
		Erstellt eine Instanz der Klasse FunctionParser()
		Erstellt unter bestimmten Bedingungen eine Instanz der 
			Klasse Template()

class Template():
		In der gesamten Klasse werden keine neuen Instanzen erzeugt.
	def __init__(self, templateDict, name, variables):
	def setParameters(self, nameList, default_value_dictionary, values):
	def output(self, type):

class Writer():
		In der gesamten Klasse werden keine neuen Instanzen erzeugt.
	def __init__(self, options):
	def headerFile(self, functionList):
	def sourceFileWrap(self, functionList):
	def sourceFilePlain(self, functionList):
	def sourceFileDLSym(self, functionList):

ohne Klasse:
	def main():
		Erstellt eine Instanz der Klasse Option(). 
		Ruft auf dieser Instanz die Funktion parse() auf.
		Erstellt eine Instanz der Klasse FunctionParser(). 
